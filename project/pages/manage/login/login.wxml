<!--pages/userManage/login/login.wxml-->
<form class='content' bindsubmit='login'>
  <input type="number" name="mobile" placeholder="请输入11位手机号码" maxlength="11" style="margin-top: 70rpx;" />
  <input type="password" name="password" placeholder="请输入密码" />
  <button class="submit" form-type='submit'>登录</button>
  <view class="btn flex-between register">
    <navigator url='/pages/manage/forget/forget'>忘记密码？</navigator>
    <navigator url="/pages/manage/register/register" class="">注册账号</navigator>
  </view>
</form>