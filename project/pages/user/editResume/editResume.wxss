@import "../../template/portrait/portrait.wxss";
@import "../../template/resumeList/resumeList.wxss";

.set-portrait {
  padding: 0 30rpx 0 32rpx;
  height: 200rpx;
}

.set-portrait text {
  flex: 1;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #bbb;
}

.icon-go image {
  width: 14rpx;
  height: 36rpx;
}

.edit-info {
  margin: 0 auto;
  width: 726rpx;
  height: 80rpx;
  font-size: 24rpx;
  color: #37d3cb;
}

.resume-list {
  border-bottom: 1px solid #dbedff;
}

.resume-list input {
  flex: 1;
  max-width: 466rpx;
  height: 88rpx;
  font-size: 28rpx;
  background: none;
  border: none;
}

.radio {
  margin-right: 90rpx;
}

.radio text {
  font-size: 28rpx;
}

.placeholder-style {
  font-size: 24rpx;
  color: #bbb;
}

.picker-none {
  font-size: 24rpx;
  color: #bbb;
}

.picker-choosed {
  font-size: 28rpx;
  color: #333;
}

.checkbox-list {
  flex: 1;
  height: 176rpx;
}

.checkbox-item {
  margin-right: 20rpx;
}

.checkbox-item checkBox {
  display: none;
}

.checkbox-checked {
  color: #fff !important;
  background-color: #37d3cb;
}

.checkbox-list text {
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 22rpx;
  text-align: center;
  border: 1px solid #37d3cb;
  color: #37d3cb;
  border-radius: 60rpx;
}

.submit-button {
  margin-top: 48rpx;
}

.resume-list textarea {
  flex: 1;
  padding: 30rpx 40rpx 30rpx 0;
  width: auto;
  min-height: 212rpx;
  font-size: 28rpx;
  color: #333;
}
.area-list {
  padding-right: 30rpx;
}
.area {
  height: 88rpx;
}
.area image {
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}