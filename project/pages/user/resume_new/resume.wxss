@import "../../template/portrait/portrait.wxss";
@import "../../template/resumeTitle/resumeTitle.wxss";

page {
  background: #f2f2f2;
}
.resume {
  padding-bottom: 116rpx;
}
.base-info {
  padding-bottom: 40rpx;
  border-top: 1rpx solid #eee;
  background: #fff;
}
.other-info {
  padding-bottom: 28rpx;
}
.tmp-title {
  width: 100%;
  padding-top: 26rpx;
}
.tmp-title .title {
  line-height: 30rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.base-title {
  padding-left: 46rpx;
  padding-right: 36rpx;
}
.other-title {
  padding-left: 34rpx;
  padding-right: 24rpx;
}
.tmp-title .edit text {
  font-size: 26rpx;
  color: #666;
}
.tmp-title .edit image {
  margin-left: 10rpx;
  width: 12rpx;
  height: 20rpx;
}

/* 基本信息 */
.base-item {
  margin-top: 36rpx;
  padding-left: 36rpx;
}
.portrait {
  margin-right: 40rpx;
  padding: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 50%;
}
.portrait image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.username {
  margin-top: 18rpx;
  line-height: 44rpx;
  font-size: 44rpx;
}
.tag-list {
  margin-top: 20rpx;
}
.tag-list text {
  margin-right: 20rpx;
  width: 98rpx;
  line-height: 32rpx;
  background: #f2f2f2;
  border-radius: 32rpx;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}
.tip {
  margin-top: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
}

/* 其他信息 */
.other-info .item {
  padding-top: 12rpx;
  padding-left: 36rpx;
}
.other-info .item text {
  line-height: 58rpx;
  font-size: 26rpx;
}

