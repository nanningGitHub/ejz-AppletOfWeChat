.to-edit {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #37d3cb;
}


.basic-area {
  padding: 28rpx 0 26rpx 18rpx;
}

.basic-portrait {
  margin-right: 30rpx;
}

.basic-name {
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.basic-content {
  margin-top: 20rpx;
  width: 256rpx;
  line-height: 22rpx;
  font-size: 22rpx;
}

.life-photo-area {
  padding: 0 3rpx;
}

.life-photo-area image {
  margin: 0 5rpx 10rpx 5rpx;
  width: 166rpx;
  height: 166rpx;
  border-radius: 8rpx;
}

.user-content {
  padding: 16rpx 40rpx 16rpx;
  border-bottom: 1px solid #dbedff;
}

.user-content {
  line-height: 56rpx;
  font-size: 28rpx;
}

.user-content-title {
  color: #bbb;
}

.job-intent {
  margin-right: 16rpx;
  padding: 0 10rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  color: #37d3cb;
  border: 1px solid #37d3cb;
  border-radius: 30rpx;
}