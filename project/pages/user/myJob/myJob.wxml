<template name="jobList">
  <view class="job" data-id="{{jobId}}" bindtap="toDetail">
    <image src="{{image}}"></image>
    <view class="textArea">
      <view class="first-row flex-between align-center">
        <text>{{title}}</text>
        <text class="deal-status" style="{{dealStatus == 4 ? 'color: #bbbbbb' : ''}}">{{dealStatusStr}}</text>
      </view>
      <view class="second-row">
        <view class="second-row-left">
          <view class="job-type">
            <text>{{jobTypeStr}}</text>
          </view>
          <view class="settlement">
            <text>{{settlementTypeStr + "结"}}</text>
          </view>
        </view>
        <view class="second-row-right">
          <view class="price" wx:if="{{salaryUnitStr == '面议'}}">
            <text>{{salaryUnitStr}}</text>
          </view>
          <view class="price" wx:else>
            <text>{{salaryStr}}</text>
          </view>
          <view class="price-info" wx:if="{{salaryUnitStr != '面议'}}">
            <text>{{"RMB/" + salaryUnitStr}}</text>
          </view>
        </view>
      </view>
      <view class="third-row">
        <view class="third-row-left">
        </view>
        <!--<view class="third-row-right">
          <image src="../../../images/distance.png"></image>
          <view class="location">
            <text>km</text>
          </view>
        </view>-->
      </view>
    </view>
  </view>
</template>
