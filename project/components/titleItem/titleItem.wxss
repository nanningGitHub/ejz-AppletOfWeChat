@import "/app.wxss";

/* components/titleItem/titleItem.wxss */

.item {
  padding: 0rpx 40rpx;
  height: 162rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.chunk {
  height: 110rpx;
}

.title {
  line-height: 42rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.people {
  font-size: 22rpx;
  color: #888;
}

.price {
  margin-right: 10rpx;
  font-size: 40rpx;
  color: #37d3cb;
}

.date {
  font-size: 22rpx;
  color: #37d3cb;
}

.methods {
  float: right;
  padding: 0 12rpx;
  background: #eee;
  border-radius: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #888;
  text-align: center;
}
